<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.activity.web.widgets">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
             point="widgettypes">
    <widgetType name="summary_document_activity_stream">
      <configuration>
        <sinceVersion>5.7</sinceVersion>
        <title>Document activity stream</title>
        <description>
          <p>This widgets displays the activity stream of a document using
          the documentactivitystream OpenSocial gadget.</p>
        </description>
        <categories>
          <category>summary</category>
        </categories>
        <supportedModes>
          <mode>view</mode>
        </supportedModes>
        <!-- no configurable properties -->
      </configuration>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/document_activity_stream_widget_template.xhtml
      </property>
    </widgetType>
  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
             point="widgets">

    <widget name="summary_document_activity_stream" type="summary_document_activity_stream" />

  </extension>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
             point="actions">

    <action id="summary_document_activity_stream" type="widget" order="225">
      <category>SUMMARY_PANEL_RIGHT</category>
      <properties>
        <property name="widgetName">summary_document_activity_stream</property>
      </properties>
    </action>

  </extension>

</component>
