<?xml version="1.0"?>
<component name="org.nuxeo.ecm.activity.web.contrib">

  <extension target="org.nuxeo.ecm.activity.ActivityStreamService"
             point="activityStreamFilters">

    <activityStreamFilter
        class="org.nuxeo.ecm.activity.DocumentActivityStreamFilter" />

  </extension>

  <extension target="org.nuxeo.ecm.activity.ActivityStreamService"
             point="activityStreams">

    <activityStream name="defaultDocumentActivityStream">
      <verbs>
        <verb>documentCreated</verb>
        <verb>documentModified</verb>
        <verb>commentAdded</verb>
        <verb>documentRestored</verb>
        <verb>workflowStarted</verb>
      </verbs>
    </activityStream>

  </extension>

</component>
